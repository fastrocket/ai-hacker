{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Local Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000/index.html",
            "webRoot": "${workspaceFolder}"
        }
    ]
}
